@model UVM1._5.Models.Item

<div class="p-3">
	<did class="d-flex">
		<div class="col-xl-8">
			<div>
				<img class="img-thumbnail" src="data:image;base64,@System.Convert.ToBase64String(Model.Images[1])" />
				<img />
				<img />
				<img />
			</div>

		</div>
		<div class="col-xl-4">
			<h3 class="pb-0">@Model.Year @Model.Brand.Name @Model.Model @Model.Category.Name</h3>
			<div class="d-flex small-font">
				<div class="mr-3 pt-0">
					item #:@Model.Id
				</div>
				<div class="mx-3">
					POS #:@Model.Id
				</div>
			</div>
			<div id="contact" class="p-1">
				<p class="bold">Contact or Visit Us for More Details </p>

			</div>
			<div>
				<div class="small-font bold">
					Condition: Used - @Model.Condition.Name
				</div>
				<h3>$@Model.Retail</h3>
			</div>

		</div>
	</did>
</div>