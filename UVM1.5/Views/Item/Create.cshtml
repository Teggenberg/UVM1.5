        }
        else {
            serial.disabled = true;
            serial.value = "";
        }
    });

    year.addEventListener("change", (e) => {

        var brnd = brand.value;
        var mod = model.value;
        var yy = year.value;
        title.value = year.value + ' ' + brand.value + ' ' + model.value + ' ' + color.value + ' ' + cat.value;

        $.ajax({
